<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://javax.ee/xml/ns/javaxee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://javax.ee/xml/ns/javaxee
                      https://javax.ee/xml/ns/javaxee/web-app_5_0.xsd"
         version="5.0"
         metadata-complete="true">

    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>

  <servlet>
    <servlet-name>trackLoader</servlet-name>
    <servlet-class>com.denis.view.TrackLoader</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>trackLoader</servlet-name>
    <url-pattern>/trackLoader</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.denis.view.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>workspace</servlet-name>
        <servlet-class>com.denis.view.Workspace</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>workspace</servlet-name>
        <url-pattern>/workspace</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.denis.view.Registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.denis.view.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>